
@model IEnumerable<roocky.Models.Application>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Ini application</h2>
        </div>
        <div class="col-6">
            This is Application
        </div>

    </div>



    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.Id</td>
                        <td width="50%">@obj.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Data Exists</p>

    }

</div>


